<div class="form-container">
  <form action="/crystals/<%= @crystal.id %>" method="post">
  
    <div class="form-group">
      <label for="name">Crystal Name:</label> 
      <input id="name" name="crystal[name]" type="text" value="<%= @crystal.name %>" class="form-control" required/>
    </div>
    <div class="form-group">
      <label for="purpose">Purpose:</label> 
      <input id="purpose" name="crystal[purpose]" type="textarea" value="<%= @crystal.purpose %>" class="form-control" required/>
    </div>
    <input id="hidden" type="hidden" name="_method" value="patch">
      <input type="submit" value="Update Joke">
  </form>
</div>